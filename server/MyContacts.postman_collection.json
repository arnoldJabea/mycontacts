{
  "info": {
    "name": "MyContacts API",
    "description": "Collection Postman pour l'API MyContacts (localhost:4000)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/health", "host": ["{{base_url}}"], "path": ["health"] }
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user+demo@mc.local\",\n  \"password\": \"Passw0rd!\"\n}"
        },
        "url": { "raw": "{{base_url}}/auth/register", "host": ["{{base_url}}"], "path": ["auth", "register"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user+demo@mc.local\",\n  \"password\": \"Passw0rd!\"\n}"
        },
        "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth", "login"] }
      }
    },
    {
      "name": "Me (profile)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "{{base_url}}/auth/me", "host": ["{{base_url}}"], "path": ["auth", "me"] }
      }
    },
    {
      "name": "List Contacts",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "{{base_url}}/contacts", "host": ["{{base_url}}"], "path": ["contacts"] }
      }
    },
    {
      "name": "Create Contact",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"Alice\",\n  \"lastName\": \"Test\",\n  \"phone\": \"0612345678\"\n}"
        },
        "url": { "raw": "{{base_url}}/contacts", "host": ["{{base_url}}"], "path": ["contacts"] }
      }
    },
    {
      "name": "Get Contact by ID",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "{{base_url}}/contacts/{{contact_id}}", "host": ["{{base_url}}"], "path": ["contacts", "{{contact_id}}"] }
      }
    },
    {
      "name": "Update Contact",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"0700000000\"\n}"
        },
        "url": { "raw": "{{base_url}}/contacts/{{contact_id}}", "host": ["{{base_url}}"], "path": ["contacts", "{{contact_id}}"] }
      }
    },
    {
      "name": "Delete Contact",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "{{base_url}}/contacts/{{contact_id}}", "host": ["{{base_url}}"], "path": ["contacts", "{{contact_id}}"] }
      }
    }
  ],
  "event": [],
  "variable": [
    { "key": "base_url", "value": "http://localhost:4000" },
    { "key": "token", "value": "" },
    { "key": "contact_id", "value": "" }
  ]
}
